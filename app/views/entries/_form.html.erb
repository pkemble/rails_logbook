<%= form_for @entry do |f| %>
	<p>
		<%= f.label :date %>
		<%= f.date_field :date, :value => Time.now.strftime("%Y-%m-%d")%>
	</p>
	<p>
		<%= f.label :tail %>
		<%= f.text_field :tail, 
			:placeholder => 'e.g. \'243\', \'708\'' %>
		
		<%= f.label :flight_number %>
		<%= f.text_field :flight_number %>
	</p>
	<p>
		<%= f.label :pic, "PIC" %>
		<%= f.check_box :pic, :checked => true %>
		
		<%= f.label :crew_name, "Crew name" %>
		<%= f.text_field :crew_name %>
	</p>
	<p>
		<%= f.label :crew_meal %>
		<%= f.number_field :crew_meal, maxlength: 1 %>
		<%= f.label :tips %>
		$<%= f.number_field :tips, maxlength: 1 %>.00
	</p>
	<p>
		<%= f.label :remarks %>
		<%= f.text_area :remarks %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>