<% if @airport.errors.any? %>
<div class="panel panel-danger">
  <div class="panel-heading">
    <%= pluralize(@airport.errors.count, "error")%> detected:</br>
  </div>
  <div class="panel-body">
    <ul>
      <% @airport.errors.full_messages.each do |m| %>
      <li>
        <%= m %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3><%= @airport.icao %>/<%= @airport.iata %>, <%= @airport.name %></h3>
  </div>
  <div class="panel-body">
    <%= render 'form' %>
  </div>
</div>
<%= debug(@airport) %>
