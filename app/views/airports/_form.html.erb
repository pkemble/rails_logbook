<%= form_for @airport do |f| %>
  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :icao %>
        <%= f.text_field :icao %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :iata %>
        <%= f.text_field :iata %>
      </div>
    </div>    
  </div>
  
  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :state %>
        <%= f.text_field :state%>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :country %>
        <%= f.text_field :country %>
      </div>
    </div>    
  </div>
  
  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :lat %>
        <%= f.text_field :lat %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :lon %>
        <%= f.text_field :lon %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :elevation %>
        <%= f.text_field :elevation %>
      </div>
    </div>    
  </div>
  
  <div class="row" >
    <div class="col-sm-12">
      <%= f.submit "Save", :class=> 'btn btn-success' %>
    </div>
  </div>
<% end %>