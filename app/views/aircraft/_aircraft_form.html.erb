<% if @aircraft.errors.any? %>
<div class="panel panel-danger">
  <div class="panel-heading">
    <%= pluralize(@aircraft.errors.count, "error")%> detected:</br>
  </div>
  <div class="panel-body">
    <ul>
      <% @aircraft.errors.full_messages.each do |m| %>
      <li>
        <%= m %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    Aircraft Information:
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= ac.label :tail, "Tail" %>
          <%= ac.text_field :tail, class: "form-control" %>
          <%= ac.label :ac_model, "Model" %>
          <%= ac.text_field :ac_model, class: "form-control" %>
        </div>
        </div>
      <div class="col-md-6">
        <div class="form-group">
          <label>Additional Information</label></br>
          <%= ac.label :multi, "Multiengine"%>
          <%= ac.check_box :multi %>
          </br>
          <%= ac.label :efis, "EFIS"%>
          <%= ac.check_box :efis %>
          </br>
          <%= ac.label :fadec, "FADEC"%>
          <%= ac.check_box :fadec %>
          </br>
          <%= ac.label :glass, "Glass panel"%>
          <%= ac.check_box :glass %>
          </br>
          <%= ac.label :turb, "Turbine"%>
          <%= ac.check_box :turb %>
          </br>
          <%= ac.label :turboprop, "Turboprop" %>
          <%= ac.check_box :turboprop %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="btn-group form-group" role="group">
        <%= ac.submit "Save", :class => "btn btn-success" %>
      </div>
    </div>
  </div>
</div>