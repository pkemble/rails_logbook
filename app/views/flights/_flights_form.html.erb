
<% if @flight.errors.any? %>
	<div class="error">
		<%= pluralize(@flight.errors.count, "error")%> detected:</br>
		<ul>
			<% @flight.errors.full_messages.each do |m| %>
				<li><%= m %></li>
			<% end %>
		</ul>
	</div>
<% end %>
	
<table>
	<tr>
		<td><%= f.label :dep %></td><td><%= f.text_field :dep, :value => @last_loc %></td>
	</tr>
	<tr>
		<td><%= f.label :arr %></td><td><%= f.text_field :arr %></td>
	</tr>
	<tr>
		<td><%= f.label :blockout %></td><td><%= f.text_field :blockout, :class => "blocktimefield" %></td>
	</tr>
	<tr>
		<td><%= f.label :blockin %></td><td><%= f.text_field :blockin, :class => "blocktimefield" %></td>
	</tr>
</table>
<p>
	<%= f.submit %> | <%= link_to "Return to entry", edit_entry_path(params[:entry_id]), class: 'btn' %>
</p>
<table>
	<tr>
		<td><%= f.label :instrument %></td><td><%= f.number_field :instrument, :maxlength => "3" %></td>
		<td><%= f.label :approaches %></td><td><%= f.number_field :approaches, :maxlength => "3" %></td>
	</tr>
	<tr>
		<td><%= f.label :night %></td><td><%= f.number_field :night, :maxlength => "3" %></td>
	</tr>
	<tr>
		<td><%= f.label :night_to %></td><td><%= f.number_field :night_to, :maxlength => "3" %></td>
		<td><%= f.label :night_ld %></td><td><%= f.number_field :night_ld, :maxlength => "3" %></td>
	</tr>
	<tr>
		<td><%= f.label :pf, "PF" %><%= f.check_box :pf %></td>
	</tr>
</table>
