<p>
	Total flight hours in last 24 hours: <%= p 'todo' %>
</p>
<p>
<%= link_to 'new entry', new_entry_path, class: "btn btn-success" %>
</p>
<table class="table table-striped table-condensed table-bordered">
	<tr>
		<th>date</th>
		<th>tail</th>
		<td>legs</td>
		<td>hobbs</td>
		<td>flight number</td>
		<td>identifiers</td>
		<td>crew member</td>
		<td>per diem hours</td>
	</tr>
	
	<% @entries.each do |e| %>
		<tr>
			<td><%= link_to e.date.strftime('%m-%d-%y'), edit_entry_path(e.id) %></td>
			<td><%= e.tail %></td>
			<td><%= e.flights.count %></td>
			<td><%= e.total_time %></td>
			<td><%= e.flight_number %></td>
			<td><%= e.arpt_string %></td>
			<td><%= e.crew_name %></td>
			<td><%= e.per_diem_hours == 24.0 ? "24" : e.per_diem_hours %></td>
		</tr>
	<% end %>	
</table>
